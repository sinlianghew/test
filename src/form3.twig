{% extends "templates/partials/base.twig" %}

{% block main %}

<div class="form-wizard" id="travel-form">
    <div class="container py-5">
        <h1>Travel Insurance</h1>
        {% include "templates/components/steppers.twig" %}
    </div>

    <div class="bg-p2d py-5 wizard-sections">

        <div class="wizard-section-3">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-8">
                        <div class="bg-w py-5 px-4 mb-3">
                            <h2 class="p2 mb-4">Personal Details</h2>

                            <div class="row" v-if="formData.idType === 'Passport'">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <p class="bt1">Country:</p>
                                        {% verbatim %}
                                        <select v-model="formData.country" class="form-control">
                                            <option disabled hidden selected value="">Select a country</option>
                                            <option v-for="country in allCountries"
                                                v-bind:key="allCountries.indexOf(country)" :value="country">
                                                {{ country }}</option>
                                        </select>
                                        {% endverbatim %}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="customerName" class="bt1">Name (as per NRIC):</label>
                                        <input id="customerName" type="text" class="form-control"
                                            placeholder="e.g. Henry Teo">
                                        <small class="error-message text-primary font-italic">* Complete the Name as per
                                            NRIC filed. as per card</small>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label for="nricNo" class="bt1">NRIC No:</label>
                                            <input id="nricNo" disabled type="text" class="form-control" placeholder="NRIC" v-model="formData.nric">
                                            <small class="error-message text-primary font-italic">* Complete the NRIC field.</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="customerEmail" class="bt1">Email:</label>
                                        <input id="customerEmail" type="text" class="form-control"
                                            placeholder="e.g. hteoro@gmail.com">
                                        <small class="error-message text-primary font-italic">* Complete the Email
                                            field.</small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="mobileNo" class="bt1">Mobile No:</label>
                                        <input id="mobileNo" type="text" class="form-control"
                                            placeholder="e.g. 01x-xxxxxxx">
                                        <small class="error-message text-primary font-italic">* Complete the Mobile
                                            field.</small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6" v-if="formData.idType === 'Passport'">
                                    <div class="form-group">
                                        <label class="bt1">Gender:</label>
                                        <select class="form-control" v-model="formData.gender">
                                            <option value="" selected disabled hidden>Please select</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                        <small class="error-message text-primary font-italic">* Complete the Gender
                                            field.</small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6" v-if="formData.idType === 'Passport'">
                                    <p class="bt1 mb-2">Date of Birth:</p>
                                    <div class="form-group variant-date-picker mb-0">
                                        <datepicker class="form-control" placeholder="DD/MM/YYYY"
                                            :format="customDateFormatter" v-model="formData.dateOfBirth">
                                        </datepicker>
                                        {% include "templates/components/icon.twig" with { iconName: 'calendar' } %}
                                    </div>
                                    <small class="error-message text-primary font-italic">* Please enter valid
                                        DOB.</small>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="address1" class="bt1">Address:</label>
                                        <input id="address1" type="text" class="form-control" placeholder="First Line">
                                        <small class="error-message text-primary font-italic">* Complete the Address
                                            field.</small>
                                    </div>
                                    <div class="form-group">
                                        <input id="address2" type="text" class="form-control" placeholder="Second Line">
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group variant-icon">
                                        <label for="postcode" class="bt1">Postcode</label>
                                        <div class="input-wrapper">
                                            <input id="postcode" type="text" class="form-control"
                                                placeholder="Find postcode">
                                            {% include "templates/components/icon.twig" with { iconName: 'search', iconSize: 'm' } %}
                                        </div>
                                        <small class="error-message text-primary font-italic">* Complete the Postal Code
                                            field.</small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="city" class="bt1">City:</label>
                                        <input id="city" type="text" class="form-control" disabled placeholder="City">
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="state" class="bt1">State:</label>
                                        <input id="state" type="text" class="form-control" disabled placeholder="State">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- dummy html -->
                        <div class="bg-w py-5 px-4 mb-3">
                            {% verbatim %}
                            <h2 class="p2">Family Member #1</h2>
                            {% endverbatim %}

                            <p class="bt1">Traveller</p>
                            <div class="d-flex mb-4">
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="radio" value="Spouse">
                                    <label class="form-check-label">Spouse</label>
                                </div>
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="radio" value="Child (30 days - 17 years old)">
                                    <label class="form-check-label">Child (30 days - 17 years old)</label>
                                </div>
                            </div>

                            <p class="bt1">Nationality</p>
                            <div class="d-flex mb-4">
                                <div class="form-check mb-1">
                                    <input type="radio" class="form-check-input" value="Malaysian">
                                    <label class="form-check-label">Malaysian</label>
                                </div>
                                <div class="form-check mb-1">
                                    <input type="radio" class="form-check-input" value="Non-Malaysian">
                                    <label class="form-check-label">Non-Malaysian</label>
                                </div>
                            </div>

                            <p>sport plan</p>
                            {% include "templates/components/icon.twig" with { iconName: 'travel-plan1' , iconSize:'xxl' } %}

                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <p class="bt1">Country</p>
                                    <div class="form-group">
                                        {% verbatim %}
                                        <select class="form-control">
                                            <option disabled hidden selected value="">Select a country</option>
                                            <option v-for="country in allCountries"
                                                v-bind:key="allCountries.indexOf(country)" :value="country">
                                                {{ country }}</option>
                                        </select>
                                        {% endverbatim %}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label class="bt1">Name (as per NRIC):</label>
                                        <input type="text" class="form-control" placeholder="e.g. Lisa Teo">
                                        <small class="error-message text-primary font-italic">* Complete the Name as per
                                            NRIC filed.</small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label class="bt1">NRIC No:</label>
                                        <input type="text" class="form-control" placeholder="e.g. 888888-88-8888">
                                        <small class="error-message text-primary font-italic">* Complete the NRIC
                                            field.</small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <p class="bt1">Date of Birth:</p>
                                    <div class="form-group variant-date-picker mb-0">
                                        <datepicker class="form-control" placeholder="DD/MM/YYYY"
                                            :format="customDateFormatter">
                                        </datepicker>
                                        {% include "templates/components/icon.twig" with { iconName: 'calendar' } %}
                                    </div>
                                    <small class="error-message text-primary font-italic">* Please enter valid
                                        DOB.</small>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                                <a href="#" class="btn btn-primary btn-icon">
                                    <div class="button-icon">
                                        {% include "templates/components/icon.twig" with { iconName: 'close', iconSize: 's' } %}
                                    </div>
                                    <span class="button-text">Remove</span>
                                </a>
                            </div>
                        </div>


                        <div class="bg-w py-5 px-4 mb-3">
                                {% verbatim %}
                                <h2 class="p2">Family Member #2</h2>
                                {% endverbatim %}
    
                                <p class="bt1">Traveller</p>
                                <div class="d-flex mb-4">
                                    <div class="form-check mb-1">
                                        <input class="form-check-input" type="radio" value="Spouse">
                                        <label class="form-check-label">Spouse</label>
                                    </div>
                                    <div class="form-check mb-1">
                                        <input class="form-check-input" type="radio" value="Child (30 days - 17 years old)">
                                        <label class="form-check-label">Child (30 days - 17 years old)</label>
                                    </div>
                                </div>
    
                                <p class="bt1">Nationality</p>
                                <div class="d-flex mb-4">
                                    <div class="form-check mb-1">
                                        <input type="radio" class="form-check-input" value="Malaysian">
                                        <label class="form-check-label">Malaysian</label>
                                    </div>
                                    <div class="form-check mb-1">
                                        <input type="radio" class="form-check-input" value="Non-Malaysian">
                                        <label class="form-check-label">Non-Malaysian</label>
                                    </div>
                                </div>
    
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <p class="bt1">Country</p>
                                        <div class="form-group">
                                            {% verbatim %}
                                            <select class="form-control">
                                                <option disabled hidden selected value="">Select a country</option>
                                                <option v-for="country in allCountries"
                                                    v-bind:key="allCountries.indexOf(country)" :value="country">
                                                    {{ country }}</option>
                                            </select>
                                            {% endverbatim %}
                                        </div>
                                    </div>
                                </div>
    
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="bt1">Name (as per NRIC):</label>
                                            <input type="text" class="form-control" placeholder="e.g. Lisa Teo">
                                            <small class="error-message text-primary font-italic">* Complete the Name as per
                                                NRIC filed.</small>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="bt1">NRIC No:</label>
                                            <input type="text" class="form-control" placeholder="e.g. 888888-88-8888">
                                            <small class="error-message text-primary font-italic">* Complete the NRIC
                                                field.</small>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <p class="bt1">Date of Birth:</p>
                                        <div class="form-group variant-date-picker mb-0">
                                            <datepicker class="form-control" placeholder="DD/MM/YYYY"
                                                :format="customDateFormatter">
                                            </datepicker>
                                            {% include "templates/components/icon.twig" with { iconName: 'calendar' } %}
                                        </div>
                                        <small class="error-message text-primary font-italic">* Please enter valid
                                            DOB.</small>
                                    </div>
                                </div>
    
                                <div class="d-flex justify-content-end">
                                    <a href="#" class="btn btn-primary btn-icon">
                                        <div class="button-icon">
                                            {% include "templates/components/icon.twig" with { iconName: 'close', iconSize: 's' } %}
                                        </div>
                                        <span class="button-text">Remove</span>
                                    </a>
                                </div>
                            </div>
                        <!-- dummy html -->



                        <div class="bg-w py-5 px-4 mb-3" v-for="(member, index) in formData.familyMembers">
                            {% verbatim %}
                            <h2 class="p2">Family Member #{{index + 1}}</h2>
                            {% endverbatim %}

                            <p class="bt1">Traveller</p>
                            <div class="d-flex mb-4">
                                <div class="form-check mb-1">
                                    <input :id="'relationToCustomer-1-' + index" class="form-check-input" type="radio"
                                        value="Spouse" v-model="member.relationToCustomer">
                                    <label :for="'relationToCustomer-1-' + index"
                                        class="form-check-label">Spouse</label>
                                </div>
                                <div class="form-check mb-1">
                                    <input :id="'relationToCustomer-2-' + index" class="form-check-input" type="radio"
                                        value="Child (30 days - 17 years old)" v-model="member.relationToCustomer">
                                    <label :for="'relationToCustomer-2-' + index" class="form-check-label">Child (30
                                        days - 17 years old)</label>
                                </div>
                            </div>

                            <p class="bt1">Nationality</p>
                            <div class="d-flex mb-4">
                                <div class="form-check mb-1">
                                    <input :id="'nationality-1-' + index" type="radio" class="form-check-input"
                                        value="Malaysian" v-model="member.nationality">
                                    <label :for="'nationality-1-' + index" class="form-check-label">Malaysian</label>
                                </div>
                                <div class="form-check mb-1">
                                    <input :id="'nationality-2-' + index" type="radio" class="form-check-input"
                                        value="Non-Malaysian" v-model="member.nationality">
                                    <label :for="'nationality-2-' + index"
                                        class="form-check-label">Non-Malaysian</label>
                                </div>
                            </div>

                            <div class="row" v-if="member.nationality === 'Non-Malaysian'">
                                <div class="col-12 col-md-6">
                                    <p class="bt1">Country</p>
                                    <div class="form-group">
                                        {% verbatim %}
                                        <select v-model="member.country" class="form-control">
                                            <option disabled hidden selected value="">Select a country</option>
                                            <option v-for="country in allCountries"
                                                v-bind:key="allCountries.indexOf(country)" :value="country">
                                                {{ country }}</option>
                                        </select>
                                        {% endverbatim %}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label class="bt1">Name (as per NRIC):</label>
                                        <input type="text" class="form-control" placeholder="e.g. Lisa Teo"
                                            v-model="member.name">
                                        <small class="error-message text-primary font-italic">* Complete the Name as per
                                            NRIC filed.</small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label class="bt1">NRIC No:</label>
                                        <input type="text" class="form-control" placeholder="e.g. 888888-88-8888"
                                            v-model="member.nric">
                                        <small class="error-message text-primary font-italic">* Complete the NRIC
                                            field.</small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6" v-if="member.nationality === 'Non-Malaysian'">
                                    <p class="bt1">Date of Birth:</p>
                                    <div class="form-group variant-date-picker mb-0">
                                        <datepicker class="form-control" placeholder="DD/MM/YYYY"
                                            :format="customDateFormatter" v-model="member.dateOfBirth">
                                        </datepicker>
                                        {% include "templates/components/icon.twig" with { iconName: 'calendar' } %}
                                    </div>
                                    <small class="error-message text-primary font-italic">* Please enter valid
                                        DOB.</small>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                                <a href="#" class="btn btn-primary btn-icon"
                                    @click.prevent="removeFamilyMember(member)">
                                    <div class="button-icon">
                                        {% include "templates/components/icon.twig" with { iconName: 'close', iconSize: 's' } %}
                                    </div>
                                    <span class="button-text">Remove</span>
                                </a>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mb-3">
                            <a href="#" @click.prevent="addFamilyMember()" class="btn btn-secondary btn-icon">
                                <div class="button-icon">
                                    {% include "templates/components/icon.twig" with { iconName: 'plus', iconSize: 's' } %}
                                </div>
                                <span class="button-text">Add family</span>
                            </a>
                        </div>

                        <div class="pt-4 wizard-navigation d-none d-md-flex">
                            <a href="#" role="button" class="btn btn-default btn-outline-primary"
                                @click.prevent="goToPrevStep()">Back</a>
                            <a href="#" role="button" class="btn btn-default btn-primary"
                                @click.prevent="goToNextStep()">Continue</a>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        {% include "templates/components/summary-pane.twig" %}
                    </div>
                </div>
            </div>
            <div class="container pt-4 wizard-navigation d-md-none">
                <a href="#" role="button" class="btn btn-default btn-outline-primary mb-3 mb-md-0"
                    @click="goToPrevStep()">Back</a>
                <a href="#" role="button" class="btn btn-default btn-primary" @click="goToNextStep()">Continue</a>
            </div>
        </div>

    </div>
</div>

{% endblock %}