{% extends "templates/partials/base.twig" %}

{% block main %}


<div id="travel-form" class="form-wizard" style="opacity: 1;">
    <div class="container py-5">
        <h1>Tie The Knot Insurance</h1>

        {% embed "templates/components/steppers-html.twig" %}
        {% set stepList = [ 
            {stepclass:' current', stepNum: '1', step :'Get Started'},
            {stepclass:' ', stepNum: '2', step :'Event Details'},
            {stepclass:' ', stepNum: '3', step :'Personal details'},
            {stepclass:' ', stepNum: '4', step :'REVIEW'},
            {stepclass:' ', stepNum: '5', step :'PAY'}
         ] %}
        {% endembed %}

    </div>


    <div class="bg-p2d py-5 wizard-sections">
        <div class="wizard-section-1">
            <div class="container">
                <div class="bg-w py-5 px-md-5 px-3 mx-md-2">
                    <h2 class="p2">Get Started</h2>
                    <div class="bt2 mt-4">
                        <p>
                            Please make sure you meet the following conditions.
                        </p>
                        <ol class="pl-3">
                            <li>You and your spouse-to-be are between 18 and 70 years old.</li>
                            <li>You or your spouse-to-be must be Malaysian or Permanent Resident of Malaysia.</li>
                            <li> Your wedding and/or reception venue(s) are in Malaysia.</li>
                            <li>You and your spouse-to-be are not aware of any circumstances which may give rise to a
                                loss.</li>
                            <li>You and your spouse-to-be are not suffering from any physical, psychological, or other
                                medical conditions.</li>
                        </ol>
                    </div>
                    <div class="bt2 mt-4 pt-2">

                        <div class="form-check">
                            <input type="checkbox" name="agreement" id="agreement" class="form-check-input">
                            <label for="agreement" class="form-check-label">
                                I have read and understood MSIG's <a href="#">Privacy Notice</a> and agree to MSIG
                                processing my personal data for the purposes and in the manners set out in the Privacy
                                Notice.
                            </label>
                            <svg class="icon icon-m tick-mark">
                                <use xlink:href="assets/icons/icons.svg#sprite-tick-mark"
                                    href="assets/icons/icons.svg#sprite-tick-mark"></use>
                            </svg>
                            <small class="error-message text-primary font-italic">* Oops, looks like you haven't ticked
                                the box yet. Please do so to proceed</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container pt-4 wizard-navigation"><a href="#" role="button">
                    <a class="btn btn-default btn-outline-primary mb-3 mb-md-0">Back</a>
                    <a href="#" role="button" class="btn btn-default btn-primary">Continue</a>
            </div>
        </div>
    </div>
</div>



{% endblock %}