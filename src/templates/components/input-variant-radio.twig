<div class="d-flex {% if spacing %} {{ spacing }}{% endif %}">
    {% for control in formControls %}    
        <div class="form-check">
            <input class="form-check-input" type="radio" name="{{ name }}" value="{{ control.value }}" id="{{ name }}{{ loop.index }}">
            <label class="form-check-label" for="{{ name }}{{ loop.index }}">{{ control.value }}</label>
        </div>
    {% endfor %}
</div>


