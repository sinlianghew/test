<div class="radio-infobox {{classes}}">
    <label class="d-block">
        <input type="radio" name="{{name}}" />
        <div class="box overflow-hidden">
            <div class="box--header bg-p2 text-white p-3">
                {% block top %}
                    Headline
                {% endblock %}
            </div>
            <div class="box--body p-3">
                {% block bottom %}
                    Body
                {% endblock %}
                
                <div class="text-center">
                    <div class="custom-rounded-checked">
                        <svg class="icon icon-m tick-mark my-2">
                            <use xlink:href="assets/icons/icons.svg#sprite-tick-mark" href="assets/icons/icons.svg#sprite-tick-mark"></use>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </label>
</div>