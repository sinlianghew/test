                                    <p class="bt1">Gender:</p>
                                    <div class="form-group">
                                        <select class="form-control">
                                            <option disabled="disabled" hidden="hidden" selected="selected" value="">
                                                Select Option
                                            </option>
                                            <option value="Male">Male</option>
                                            <option value="Femaale"> Femaale</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="col-12 col-md-6">
                                    <p class="bt1">Date of Birth:</p>
                                    <div class="form-group variant-date-picker mb-0">
                                        <datepicker class="form-control" placeholder="DD/MM/YYYY"
                                            :format="customDateFormatter">
                                        </datepicker>
                                        {% include "templates/components/icon.twig" with { iconName: 'calendar' } %}
                                    </div>
                                    <small class="error-message text-primary font-italic">* Please enter valid
                                        DOB.</small>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-4 pt-3">
                                <a href="#" class="btn btn-primary btn-icon mr-3">
                                    <div class="button-icon">
                                        {% include "templates/components/icon.twig" with { iconName: 'close', iconSize: 's' } %}
                                    </div>
                                    <span class="button-text">Cancel</span>
                                </a>
                                <a href="#" class="btn btn-default btn-secondary">Save</a>
                            </div>
                        </div>


                        <div class="form-check mb-5">
                            <input type="checkbox" name="tncAgreement" id="tncAgreement" class="form-check-input">
